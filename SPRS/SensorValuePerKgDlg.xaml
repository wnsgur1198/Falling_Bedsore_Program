<Window x:Class="Loadcell.SensorValuePerKgDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="1Kg당 측정되는 센서값 측정"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize" 
        Background="BlanchedAlmond">

   <StackPanel Margin="10">

      <TextBlock x:Name="infoMsg" Margin="20" TextWrapping="Wrap" FontSize="14" />

      <StackPanel Margin="10" Orientation="Horizontal"  HorizontalAlignment="Center">
         <TextBox x:Name="samplingMass" Width="120" Height="50" FontSize="24" Background="Chartreuse"
               BorderBrush="Black" BorderThickness="2"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
         <Label FontSize="24" Content="Kg" />
      </StackPanel>

      <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
         <Button Margin="5" FontSize="18" Click="OKBtnClicked" Width="100" Height="30 " IsDefault="True">OK</Button>
         <Button Margin="5" FontSize="18" Click="CancelBtnClicked" Width="100" Height="30">Cancel</Button>
      </StackPanel>
   </StackPanel>

</Window>